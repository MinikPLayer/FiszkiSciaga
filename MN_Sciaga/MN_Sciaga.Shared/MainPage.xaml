<Page
    x:Class="MN_Sciaga.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MN_Sciaga"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"    
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Button Content="MN 2022" Click="LoadMNClicked" FontSize="32" Margin="10"/>
            <Button Content="Load Custom" Click="LoadButtonClicked" FontSize="32" Margin="10"/>
        </StackPanel>
        <Button Content="Toggle Fullscreen" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="5" Click="ToggleFullscreen_Clicked"/>
    </Grid>

</Page>
